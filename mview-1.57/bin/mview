[GENERICBLAST]

OPTION:   hsp
type:     s
default:  ranked
param:    
convert:  sub { __ARGS;
		return 'all'      if __OV =~ /^a/;
		return 'discrete' if __OV =~ /^d/;
	        return 'ranked'   if __OV =~ /^r/;
		__WARN("bad setting '-__ON=__OV'.");
		__WARN("known hsp methods are: ", join(",",
		Bio::MView::Manager::check_hsp_tiling), "\n");
	      }

OPTION:   maxeval
type:     s
default:  unlimited
param:    
convert:  sub { __ARGS;
		return undef    if __OV eq 'unlimited';
		__TEST('f', __ON, __OV);
		__WARN("bad setting '-__ON=__OV', want > 0.") if __OV < 0;
		__OV;
	  }

OPTION:   minbits
type:     s
default:  unlimited
param:    
convert:  sub { __ARGS;
		return undef    if __OV eq 'unlimited';
		__TEST('i', __ON, __OV);
		__WARN("bad setting '-__ON=__OV', want > 0.") if __OV < 0;
		__OV;
	  }

OPTION:   strand
type:     @s
default:  *
param:
convert:  sub { __ARGS;
              local $_; my @tmp=();
              foreach (@{__PV}) {
                if      ($_ eq 'p' or $_ eq 'P') {
		    push @tmp, '+';
		} elsif ($_ eq 'm' or $_ eq 'M') {
		    push @tmp, '-';
		} elsif ($_ eq '*') {
		    @tmp = ('*');
		    last;
		} else {
                  __WARN("bad value for '-__ON=$_' choose from '{p,m,*}'");
                }
              }
              \@tmp;
          }


