[HTML]

text:     "HTML markup options:"

OPTION:   html
usage:    "Controls amount of HTML markup {head,body,data,full,off}"
type:     s
default:  off
param:
convert:  sub { __ARGS;
		if (__OV =~ /^full/i) {
		    __OPTION{__ON} = (16|8|4|2|1);
		    return 1;
		}
		if (__OV =~ /^head/i) {
		    __OPTION{__ON} = (8|4|2|1);
		    return 1;
		}
		if (__OV =~ /^body/i) {
		    __OPTION{__ON} = (4|2|1);
		    return 1;
		}
		if (__OV =~ /^data/i) {
		    __OPTION{__ON} = (1);
		    return 1;
		}
		if (__OV =~ /^off/i) {
		    __OPTION{__ON} = 0;
		    return 0;
		}
		__WARN ("unknown setting '-__ON=__OV'");
	    }

OPTION:   title
usage:    "Page title string"
type:     s
default:  ""

OPTION:   pagecolor
usage:    "Page backgound color"
type:     s
default:  white

OPTION:   textcolor
usage:    "Page text color"
type:     s
default:  black

OPTION:   linkcolor
